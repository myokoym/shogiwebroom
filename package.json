{
  "name": "shogiwebroom",
  "version": "1.0.0",
  "description": "synchronized Shogi board on Web",
  "author": "Masafumi Yokoyama",
  "private": true,
  "engines": {
    "node": ">=14.0.0 <24.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "dev": "docker compose up --build",
    "dev:detached": "docker compose up --build -d",
    "dev:local": "docker compose --env-file .env.local up --build",
    "dev:local:detached": "docker compose --env-file .env.local up --build -d",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "dev:native": "cross-env NODE_OPTIONS=--openssl-legacy-provider NODE_ENV=development nodemon server/index.js --watch server",
    "dev:native:redis": "cross-env NODE_OPTIONS=--openssl-legacy-provider REDIS_URL=redis://localhost:6379 NODE_ENV=development nodemon server/index.js --watch server",
    "dev:rebuild": "docker compose down && docker compose up --build",
    "dev:node18": "docker run -it --rm -v $(pwd):/app -w /app -p 3000:3000 -e REDIS_URL=redis://host.docker.internal:6379 node:18-alpine sh -c 'npm install && npm run dev:native'",
    "docker:build": "docker build -t shogiwebroom .",
    "docker:run": "docker run -p 3000:3000 --env-file .env shogiwebroom",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:web": "docker compose logs -f web",
    "docker:logs:redis": "docker compose logs -f redis",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:status": "docker compose ps",
    "docker:helper": "./docker/dev-helper.sh",
    "deploy:fly": "fly deploy",
    "deploy:setup": "fly launch",
    "test": "docker compose -f compose.test-simple.yaml up test --abort-on-container-exit",
    "test:quick": "./scripts/test-runner.sh",
    "test:unit": "./scripts/test-runner.sh --testPathPattern=test/unit --passWithNoTests --maxWorkers=2",
    "test:integration": "./scripts/test-runner.sh --testPathPattern=test/integration --passWithNoTests --maxWorkers=2 --testTimeout=60000",
    "test:e2e": "echo 'E2E tests not implemented yet. Use test/e2e directory for future E2E tests.'",
    "test:watch": "./scripts/test-runner.sh --watch --passWithNoTests",
    "test:coverage": "./scripts/test-runner.sh --coverage --passWithNoTests --maxWorkers=2",
    "test:ci": "./scripts/test-runner.sh --ci --coverage --passWithNoTests --maxWorkers=2",
    "test:build": "node scripts/test-build.js",
    "test:build:docker": "docker compose -f compose.test-simple.yaml run --rm test npm run build",
    "test:build:jest": "./scripts/test-runner.sh --testPathPattern=test/integration/build.test.js --testTimeout=60000",
    "test:redis": "docker compose -f compose.test-simple.yaml run --rm test node scripts/test-redis.js",
    "test:native": "npm run build",
    "test:env:up": "docker compose -f compose.test.yaml up redis web -d",
    "test:env:down": "docker compose -f compose.test.yaml down -v",
    "test:simple": "docker compose -f compose.test-simple.yaml up test --abort-on-container-exit",
    "test:simple:down": "docker compose -f compose.test-simple.yaml down -v",
    "clean": "rm -rf .nuxt dist node_modules/.cache"
  },
  "dependencies": {
    "bootstrap-vue": "^2.13.1",
    "cross-env": "^5.2.0",
    "crypto-random-string": "^3.2.0",
    "express": "^4.16.4",
    "ioredis": "^4.16.3",
    "moment": "^2.25.3",
    "nuxt": "^2.18.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "vue-clipboard2": "^0.3.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.9",
    "jest": "26.6.3",
    "@vue/test-utils": "1.3.0",
    "babel-jest": "26.6.3",
    "jest-serializer-vue": "2.0.2"
  }
}
